			<div class="row"></div>
			<div class="col-lg-12 col-2">
				<div class="col-lg-12 col-12">
					<div class="row">
						<div class="col-12">
							<div class="comments-form">
								<h1 style="font-size: 18px;"><i style="font-size: 25px;"
										class="fa-solid fa-comments"></i> Konsultasi - ID <%= konsultasi.id_konsultasi %></h1>
							</div>
						</div>
					</div>
				</div>
				<form action="/updateKonsultasi1" method="POST">
				<div class="col-lg-12 col-12">
					<div class="row">
						<div class="col-12">
							<div class="comments-form">
								<div class="d-flex justify-content-between align-items-center">
									<h2 style="display: inline;">
										Data Kasus Hukum dan Pengguna
									</h2>
									<i style="font-size: 15px;" class="fa-solid fa-info-circle"
										title="Data tidak dapat diubah"></i>
								</div>
								<div class="row">
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group position-relative">
											<small>ID Konsultasi</small>
											<div class="input-icon">
												<i class="fa-solid fa-folder-closed"></i>
												<input id="id_konsultasi" name="id_konsultasi" type="number"
													value="<%= konsultasi.id_konsultasi %>"
													oninput="validateLength(this)" readonly>
											</div>
											<small id="error-message" style="color:red; display:none;">ID hanya terdiri
												dari 9 angka acak</small>
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group position-relative">
											<small>Tanggal Pengajuan Konsultasi</small>
											<div class="input-icon">
												<i class="fa-solid fa-calendar-days"></i>
												<input id="tanggal" name="tanggal" type="text"
													value="<%= konsultasi.tanggal %>" readonly>
											</div>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group position-relative">
											<small>Status Penanganan</small>
											<div class="input-icon">
												<i class="fa-solid fa-spinner"></i>
												<input id="status" name="status" type="text"
													value="<%= konsultasi.status %>" readonly>
											</div>
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group position-relative">
											<small>Wilayah Hukum</small>
											<div class="input-icon">
												<i class="fa-solid fa-map-location-dot"></i>
												<input id="wilayahhukum" name="wilayahhukum" type="text"
													value="<%= konsultasi.wilayahhukum %>" readonly>
											</div>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group position-relative">
											<small>ID Pengguna - Solusi Adil Users - Mengajukan Pertanyaan</small>
											<div class="input-icon">
												<i class="fa-regular fa-id-card"></i>
												<input id="id_masyarakat" name="id_masyarakat" type="text"
													value="<%= konsultasi.id_masyarakat %>" readonly>
											</div>
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group position-relative">
											<small>Nama Penanya</small>
											<div class="input-icon">
												<i class="fa-solid fa-user-tie"></i>
												<input id="nama_mast" name="nama_mast" type="text"
													value="<%= konsultasi.nama_mast %>" readonly>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
