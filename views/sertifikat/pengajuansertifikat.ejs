<%- include('../partials/head') %>

	<body>

		<%- include('../partials/header', { activePage: 'datasertifikat' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 col-2">
							<div class="row">
								<div class="col-12">
									<div class="comments-form d-flex justify-content-between align-items-center">
										<h1 style="font-size: 18px;"><i class="fa-solid fa-compass"></i> Sertifikat Keanggotaan Dan Pelayanan Resmi</h1>
									</div>
								</div>
							</div>
						</div>

						<div class="col-lg-12 col-12">
							<div class="row">
								<div class="col-12">
									<div class="comments-form">
										<h1 style="font-size: 18px; padding-bottom: 25px;"> Pengajuan Sertifikat</h1>
										<form action="/kirimsertifikat" method="POST" >
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID Sertifikat</small>
														<div class="input-icon">
															<i class="fa-solid fa-key"></i>
															<input id="id_sertifikat" name="id_sertifikat"
															value="<%=  sertifikat.id_sertifikat %>"	oninput="validateLength(this)" readonly>
														</div>
														<small id="error-message" style="color:red; display:none;">ID
															hanya
															terdiri
															dari 9 angka acak</small>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Tanggal Pengajuan</small>
														<div class="input-icon">
															<i class="fa-solid fa-calendar-days"></i>
															<input value="<%=  sertifikat.tanggal %>"  id="tanggal" name="tanggal" readonly>
														</div>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID APPH Anda</small>
														<div class="input-icon">
															<i class="fa-regular fa-id-card"></i>
															<input id="id_apph" name="id_apph" type="text"
																value="<%=  sertifikat.id_apph %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Nama Anda</small>
														<div class="input-icon">
															<i class="fa-solid fa-user-tie"></i>
															<input id="nama_apph" name="nama_apph" type="text"
																value="<%= sertifikat.nama_apph %>" readonly>
														</div>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Keterangan</small>
														<div class="input-icon">
															<i class="fa-regular fa-id-card"></i>
															<input id="keterangan" name="keterangan" type="text"
																value="<%=  sertifikat.keterangan %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Status</small>
														<div class="input-icon">
															<i class="fa-solid fa-user-tie"></i>
															<input id="status" name="status" type="text"
																value="<%=  sertifikat.status %>" readonly>
														</div>
													</div>
												</div>
											</div>
											<div class="col-lg-0 col-md-0 col-12">
												<div class="form-group text-lg-right text-md-right text-center">
												  <div class="get-quote">
													<% if (sertifikat.status === 'Diajukan' || sertifikat.status === 'Gagal') { %>
													  <a href="/datasertifikat" class="btn">Kembali</a>
													<% } else if (sertifikat.status === 'Diterima') { %>
														<button type="submit" class="btn">Selamat Status Cetak</button>
													<% } %>
												  </div>
												</div>
											  </div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

