<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>

	<body>

		<%- include('../partials/header', { activePage: 'datablog' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row"></div>
					<div class="col-lg-12 col-2">
						<div class="col-lg-12 col-12">
							<div class="row">
								<div class="col-12">
									<div class="comments-form d-flex justify-content-between align-items-center">
										<h1 style="font-size: 18px;"><i class="fa-solid fa-compass"></i>Data Blog ID <%=
												blog.id_blog %>
										</h1>
										<div class="get-quote">
											<a href="bacablog?id_blog=<%= blog.id_blog %>" class="btn">Baca Blog</a>
										</div>
									</div>
								</div>
							</div>
						</div>
						<form action="/kirimblog" method="POST">
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													Blog Hukum Baru
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID blog</small>
														<div class="input-icon">
															<i class="fa-solid fa-folder-closed"></i>
															<input oninput="validateLength(this)"
																value="<%= blog.id_blog %>" readonly>
														</div>
														<small id="error-message" style="color:red; display:none;">ID
															hanya terdiri
															dari 9 angka acak</small>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Tanggal Pengajuan Blog</small>
														<div class="input-icon">
															<i class="fa-solid fa-calendar-days"></i>
															<input value="<%= blog.tanggal %>" readonly>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													Penulis Blog - Anda Pengguna Terverifikasi
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID APPH Anda</small>
														<div class="input-icon">
															<i class="fa-regular fa-id-card"></i>
															<input id="id_apph" name="id_apph" type="text"
																value="<%= blog.id_apph %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Nama Anda</small>
														<div class="input-icon">
															<i class="fa-solid fa-user-tie"></i>
															<input id="nama_apph" name="nama_apph" type="text"
																value="<%= blog.nama_apph %>" readonly>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<h2 style="display: inline;"><i style="font-size: 25px;"
													class="fa-solid fa-scale-balanced"></i> Blog Hukum Baru
											</h2> <br><br>
											<div class="row">
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Judul - Berikan Judul untuk Blog Hukum Ini</small>
														<div class="input-icon">
															<i class="fa-solid fa-pen-nib"></i>
															<input id="judul" name="judul" value="<%= blog.judul %>"
																type="text" oninput="validateJudul(this)" readonly>
															<small id="error-message-judul"
																style="color:red; display:none;">Hanya
																Alfabet A-Z
																dan tidak lebih dari 150 karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Dasar Hukum - Berikan Dasar Hukum Blog Hukum
															Ini</small>
														<div class="input-icon">
															<i class="fa-solid fa-book"></i>
															<input id="undang_undang" value="<%= blog.undang_undang %>"
																name="undang_undang" type="text"
																oninput="validateUU(this)" readonly>
															<small id="error-message-undang_undang"
																style="color:red; display:none;">Tidak lebih dari 550
																karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Referensi - Berikan Referensi Blog Anda</small>
														<div class="input-icon">
															<i class="fa-solid fa-book-bookmark"></i>
															<input id="doc_pendukung" name="doc_pendukung"
																value="<%= blog.doc_pendukung %>" type="text"
																oninput="validateReferensi(this)" readonly>
															<small id="error-message-doc_pendukung"
																style="color:red; display:none;">Tidak lebih dari 550
																karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group message">
														<small>Tulis Blog Terkait Hukum</small>
														<div class="input-icon">
															<p id="formatted-dsa"> </p>
														</div>
													</div>
												</div>
												<div class="col-lg-0 col-md-0 col-12">
													<div class="form-group text-lg-right text-md-right text-center">
														<div class="get-quote">
															<a href="datablog" class="btn">Kembali</a>
														</div>
													</div>
												</div>

											</div>
										</div>
									</div>
								</div>
						</form>
					</div>
				</div>
			</section>

			<%- include('../partials/footer') %>

				<%- include('../partials/js') %>
					<script src="function/blog.js"></script>
					<script>
						function convertHtmlToTextWithFormatting(html) {
							const parser = new DOMParser();
							const doc = parser.parseFromString(html, 'text/html');
							return doc.body.innerHTML;
						}
						const htmlContent = `<%- blog.isi %>`;
						const formattedTextElement = document.getElementById('formatted-dsa');
						formattedTextElement.innerHTML = convertHtmlToTextWithFormatting(htmlContent);
						formattedTextElement.style.setProperty('color', 'black', 'important');
					
						console.log(window.getComputedStyle(formattedTextElement).color);
					</script>
	</body>

</html>