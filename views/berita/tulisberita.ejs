				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/quote.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/save.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/table.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/url.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/video.min.js"></script>
				<script>
					new FroalaEditor('#froala-editor', {
						toolbarButtons: ['bold', 'italic', 'underline', 'strikeThrough', 'formatOL', 'formatUL', 'insertLink', 'emoticons', 'specialCharacters', '|', 'undo', 'redo', 'html'],
						pluginsEnabled: ['align', 'charCounter', 'codeBeautifier', 'colors', 'draggable', 'emoticons', 'entities', 'file', 'fontFamily', 'fontSize', 'fullscreen', 'image', 'imageManager', 'inlineStyle', 'lineBreaker', 'link', 'lists', 'paragraphFormat', 'paragraphStyle', 'quote', 'save', 'table', 'url', 'video'],
						charCounterCount: true,
						toolbarSticky: true,
						height: 250,
						width: 1000,

					});
				</script>
				<script>
					const input = document.getElementById('dokumen');
					const fileNameSpan = document.getElementById('file-name');

					input.addEventListener('change', function () {
						fileNameSpan.textContent = this.files[0].name || 'Tidak ada file yang dipilih';
					});
				</script>
