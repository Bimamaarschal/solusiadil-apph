<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>
	<body>

		<%- include('../partials/header', { activePage: 'databerita' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row"></div>
					<div class="col-lg-12 col-2">
						<div class="col-lg-12 col-12">
							<div class="row">
								<div class="col-12">
									<div class="comments-form">
										<h1 style="font-size: 18px;"><i style="font-size: 25px; padding-right: 15px;"
												class="fa-solid fa-scale-balanced"></i> Berita Hukum Baru</h1>
									</div>
								</div>
							</div>
						</div>
						<form action="/kirimberita" method="POST" >
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													Berita Hukum Baru
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID berita</small>
														<div class="input-icon">
															<i class="fa-solid fa-key"></i>
															<input id="id_berita" name="id_berita"
																oninput="validateLength(this)" readonly>
														</div>
														<small id="error-message" style="color:red; display:none;">ID
															hanya
															terdiri
															dari 9 angka acak</small>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Tanggal Ditambahkan</small>
														<div class="input-icon">
															<i class="fa-solid fa-calendar-days"></i>
															<input id="tanggal" name="tanggal" readonly>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													Penulis - Anda Pengguna Terverifikasi
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID APPH Anda</small>
														<div class="input-icon">
															<i class="fa-regular fa-id-card"></i>
															<input id="id_apph" name="id_apph" type="text"
																value="<%= id_apph %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Nama Anda</small>
														<div class="input-icon">
															<i class="fa-solid fa-user-tie"></i>
															<input id="nama_apph" name="nama_apph" type="text"
																value="<%= nama_apph %>" readonly>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<h2 style="display: inline;"> Data Berita
											</h2> <br><br>
											<div class="row">
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Judul Lengkap Berita</small>
														<div class="input-icon">
															<input id="judul" name="judul" type="text"
																oninput="validateJudul(this)" required>
															<small id="error-message-judul"
																style="color:red; display:none;">Hanya
																Alfabet A-Z
																dan tidak lebih dari 150 karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Keterangan</small>
														<div class="input-icon">
															<input id="keterangan" name="keterangan" type="text"
																oninput="validateUU(this)" required>
															<small id="error-message-undangundang"
																style="color:red; display:none;">Tidak lebih dari 550
																karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-12 col-12">
													<div class="form-group message">
														<small>Isi Berita</small>
														<div class="input-icon">
															<textarea id="froala-editor" name="isi"
																placeholder="Tolong, pastikan kebenaran dan keakuratan isi berdasarkan peraturan perundang-udangan yang berlaku dan relevan"> </textarea>
														</div>
													</div>
												</div>
												
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													Jenis Berita
												</h2>
											</div>
											<div class="row">
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Jenis Berita yang Di Siarkan</small>
														<select class="form-control wide" id="tag" name="tag" required>
															<option value="Pilih" disabled selected>Pilih</option>
															<option value="Hukum Masyarakat">Hukum Masyarakat</option>
															<option value="Hukum Perdata">Hukum Perdata</option>
															<option value="Hukum Pidana">Hukum Pidana</option>
															<option value="Hukum Adat">Hukum Adat</option>
															<option value="Hukum Agama">Hukum Agama</option>
															<option value="Hukum Niaga">Hukum Niaga</option>
															<option value="Hukum Buruh">Hukum Buruh</option>
															<option value="Hak">Hak</option>
															<option value="Kewajiban">Kewajiban</option>
															<option value="Pemerintah">Pemerintah</option>
															<option value="Anggaran">Anggaran</option>
															<option value="Korupsi">Korupsi</option>
															<option value="Lainnya">Lainnya</option>
														</select>
													</div>
												</div>
											</div>
											<div class="col-lg-0 col-md-0 col-12">
												<div class="form-group text-lg-right text-md-right text-center">
													<div class="get-quote">
														<button type="submit" class="btn">Kirim</button>
													</div>
												</div>
											</div>

										</div>
									</div>
								</div>
							</div>
						</form>

					</div>
			</section>

			<%- include('../partials/footer') %>

				<!-- Solusi Adil - JS Library -->
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/froala_editor.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/align.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/char_counter.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/code_beautifier.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/code_view.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/colors.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/draggable.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/emoticons.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/entities.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/file.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/font_family.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/font_size.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/fullscreen.min.js"></script>
				<script
					src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/4.0.10/js/plugins/image.min.js"></script>
