<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>

	<body>

		<%- include('../partials/header', { activePage: 'dataaturan' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row">
						<div class="col-lg-8 col-12">
							<div class="row">
								<div class="col-12">
									<div class="single-main">
										<div class="news-head">
											<img id="randomImage" src="aturan/1.png" alt="#">
										</div>
										<h1 class="news-title"><a href="news-single.html">
												<%= aturan.judul %>
											</a></h1>
										<div class="meta">
											<div class="meta-left">
												<span class="author"><a href="#"><img src="aturan/0.png" alt="#">
														<%= aturan.nama_apph%>
													</a></span>
												<span class="date"><i class="fa fa-clock-o"></i>
													<%= aturan.tanggal %>
												</span>
											</div>
											<div class="meta-right">
												<span class="views"><i class="fa fa-scale-balanced"></i></span>
											</div>
										</div>
										<div class="news-text">
											<blockquote class="overlay">
												<p>
													Dasar Hukum : <%= aturan.undang_undang %>
												</p>
											</blockquote>
											<p>
												<%= aturan.isi %>
											</p>
											<blockquote class="overlay">
												<p>
													Referensi : <%= aturan.doc_pendukung %>

												</p>
											</blockquote>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-12">
							<div class="main-sidebar">
								<div class="single-widget recent-post">
									<h3 class="title">aturan Hukum Lainnya</h3>
									<% const lastThreeaturans=aturanData2.slice(-3); %>
										<% lastThreeaturans.forEach(aturanss=> { %>
											<div class="single-post">
												<div class="image">
													<img src="img/favicon.png" alt="#">
												</div>
												<div class="content">
													<h5><a href="#">
															<%= aturanss.judul %>
														</a></h5>
													<ul class="comment">
														<li><i class="fa fa-calendar" aria-hidden="true"></i>
															<%= aturanss.tanggal%>
														</li>
													</ul>
												</div>
											</div>
											<% }); %>
								</div>

							</div>
						</div>

					</div>
				</div>
			</section>
			<section class="solusiadil-fitur" style="padding-top: 100px;">
				<div class="container">
					<div class="solusiadil-fitur-inner">
						<div class="row">
							<div class="col-lg-4 col-md-6 col-12 ">
								<div class="solusiadil-fitur-single first">
									<div class="inner">
										<div class="icon">
											<i class="fa-solid fa-scale-balanced"></i>
										</div>
										<div class="single-content">
											<h4>Menjawab Konsultasi</h4>
											<p style="font-size: 12px;">Konsultasi Hukum Online: Solusi cepat dan akurat
												untuk
												setiap permasalahan hukum
												Anda.</p>
											<a href="/konsultasi">Pilih Fitur<i class="fa fa-long-arrow-right"></i></a>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-4 col-md-6 col-12">
								<div class="solusiadil-fitur-single middle">
									<div class="inner">
										<div class="icon">
											<i class="fa-solid fa-folder-open"></i>
										</div>
										<div class="single-content">
											<h4>Tulis aturan</h4>
											<p style="font-size: 13px;">Temukan Kepastian Hukum Anda: Cari aturan Hukum
												yang
												Jelas dan Terpercaya di
												Sini.</p>
											<a href="/dataaturan">Pilih Fitur<i class="fa fa-long-arrow-right"></i></a>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-4 col-md-12 col-12">
								<div class="solusiadil-fitur-single last">
									<div class="inner">
										<div class="icon">
											<i class="fa-solid fa-gavel"></i>
										</div>
										<div class="single-content">
											<h4>aturan Hukum</h4>
											<p style="font-size: 12px;">Jelajahi keadilan dan informasi hukum melalui
												JDIH,
												pintu akses utama untuk
												pemahaman dan kepatuhan hukum.</p>
											<a href="/jdih">Pilih Fitur<i class="fa fa-long-arrow-right"></i></a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<%- include('../partials/footer') %>

				<%- include('../partials/js') %>
					<script>
						function getRandomInt(min, max) {
							min = Math.ceil(min);
							max = Math.floor(max);
							return Math.floor(Math.random() * (max - min + 1)) + min;
						}

						window.onload = function () {
							var randomNumber = getRandomInt(1, 10);
							var imgElement = document.getElementById("randomImage");
							imgElement.src = "aturan/" + randomNumber + ".png";
						}
					</script>
	</body>

</html>