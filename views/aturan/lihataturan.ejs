<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>

	<style>
		.formatted-text {
			white-space: pre-wrap;
		}
	</style>

	<body>

		<%- include('../partials/header', { activePage: 'dataaturan' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row"></div>
					<div class="col-lg-12 col-2">
						<div class="col-lg-12 col-12">
							<div class="row">
								<div class="col-12">
									<div class="comments-form d-flex justify-content-between align-items-center">
										<h1 style="font-size: 18px;"><i class="fa-solid fa-binoculars"></i> Data aturan
											ID <%= aturan.id_aturan %>
										</h1>
										<div class="get-quote">
											<a href="bacaaturan?id_aturan=<%= aturan.id_aturan %>" class="btn">Baca
												aturan</a>
										</div>
									</div>
								</div>
							</div>
						</div>

						<form action="/kirimaturan" method="POST" enctype="multipart/form-data">
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													aturan Hukum Baru
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID aturan</small>
														<div class="input-icon">
															<i class="fa-solid fa-folder-closed"></i>
															<input id="id_aturan" name="id_aturan"
																oninput="validateLength(this)"
																value="<%= aturan.id_aturan %>" readonly>
														</div>
														<small id="error-message" style="color:red; display:none;">ID
															hanya
															terdiri
															dari 9 angka acak</small>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Tanggal Terbit</small>
														<div class="input-icon">
															<i class="fa-solid fa-calendar-days"></i>
															<input id="tanggal" name="tanggal"
																value="<%= aturan.tanggal %>" readonly>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													Penulis - Anda Pengguna Terverifikasi
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID APPH Anda</small>
														<div class="input-icon">
															<i class="fa-regular fa-id-card"></i>
															<input id="id_apph" name="id_apph" type="text"
																value="<%= aturan.id_apph %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Nama Anda</small>
														<div class="input-icon">
															<i class="fa-solid fa-user-tie"></i>
															<input id="nama_apph" name="nama_apph" type="text"
																value="<%= aturan.nama_apph %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-12 col-12">
													<div class="form-group position-relative">
														<small>Instansi</small>
														<div class="input-icon">
															<i class="fa-solid fa-user-tie"></i>
															<input id="nama_lai" name="nama_lai" type="text"
																value="<%= aturan.nama_lai %>" readonly>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<h2 style="display: inline;"> Judul dan Referensi
											</h2> <br><br>
											<div class="row">
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Judul - Berikan Judul untuk aturan Hukum Ini</small>
														<div class="input-icon">
															<i class="fa-solid fa-pen-nib"></i>
															<input id="judul" name="judul" type="text"
																oninput="validateJudul(this)"
																value="<%= aturan.judul %>" readonly>
															<small id="error-message-judul"
																style="color:red; display:none;">Hanya
																Alfabet A-Z
																dan tidak lebih dari 150 karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Dasar Hukum - Berikan Dasar Hukum aturan Hukum
															Ini</small>
														<div class="input-icon">
															<i class="fa-solid fa-book"></i>
															<input id="undangundang" name="undangundang" type="text"
																oninput="validateUU(this)"
																value="<%= aturan.undangundang %>" readonly>
															<small id="error-message-undangundang"
																style="color:red; display:none;">Tidak lebih dari 550
																karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Keterangan Singkat</small>
														<div class="input-icon">
															<i class="fa-solid fa-book-bookmark"></i>
															<input id="keterangan" name="keterangan" type="text"
																oninput="validateReferensi(this)"
																value="<%= aturan.keterangan %>" readonly>
															<small id="error-message-keterangan"
																style="color:red; display:none;">Tidak lebih dari 550
																karakter</small>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													aturan
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-12 col-md-12 col-12">
													<div class="form-group message">
														<small>Penjelasan <br></small>
														<div id="content">
															<div id="formatted-text"></div>
														</div>

													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Dokumen aturan</small>
														<div class="input-icon">
															<i class="fa-solid fa-book-bookmark"></i>
															<iframe src="<%= aturan.isi_2.replace('public/', '') %>"
																width="1200" height="500" style="border: none;"></iframe>
														</div>
													</div>
												</div>
											</div>
											<div class="col-lg-0 col-md-0 col-12">
												<div class="form-group text-lg-right text-md-right text-center">
													<div class="get-quote">
														<a href="dataaturan" class="btn">Kembali</a>
													</div>
												</div>
											</div>

										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</section>

			<%- include('../partials/footer') %>

				<%- include('../partials/js') %>
					<script src="function/aturan.js"></script>
					<script>
						function convertHtmlToTextWithFormatting(html) {
							const parser = new DOMParser();
							const doc = parser.parseFromString(html, 'text/html');
							return doc.body.innerHTML;
						}
						const htmlContent = `<%- aturan.isi_1 %>`;
						const formattedTextElement = document.getElementById('formatted-text');
						formattedTextElement.innerHTML = convertHtmlToTextWithFormatting(htmlContent);
					</script>


	</body>

</html>